<h2>スケジュール詳細</h2>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @schedule.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @schedule.start_day.to_s(:date_jp) %></td>
  </tr>
  <tr>
    <th>投稿日時</th>
    <td><%= @schedule.created_at.to_s(:datetime_jp) %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td>
      <% if @schedule.all_day == true %>
      ○
      <% else @schedule.all_day == false %>

      <% end %>
      </td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @schedule.memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "スケジュール一覧に戻る", schedules_path %></li>
    <li><%= link_to "スケジュールを編集する", edit_schedule_path %></li>
    <li><%= link_to "スケジュールを削除する", schedule_path, method: :delete, data:{confirm: "本当に削除して宜しいですか？"} %></li>
  </ul>
</div>