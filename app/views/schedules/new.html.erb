<h2>スケジュール新規登録</h2>

<% if flash[:notice] %>
 <p class="notice"><%= flash[:notice] %></p>
<% end %>

<%= render "shared/error", obj: @schedule %>

<%= form_with model: @schedule, local: true do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start_day ,"開始日" %></th>
      <td><%= f.date_field :start_day %></td>
    </tr>
    <tr>
      <th><%= f.label :end_day ,"終了日" %></th>
      <td><%= f.date_field :end_day %></td>
    </tr>
    <tr>
      <th><%= f.label :all_day ,"終日" %></th>
      <td>
        <%= f.check_box :all_day, {}, checked_value='true', unchecked_value='false' %>
        <br>終日の場合はチェックを入れて下さい
      </td>
    </tr>
    <tr>
      <th><%= f.label :memo ,"スケジュールメモ" %></th>
      <td><%= f.text_area :memo %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "スケジュールを新規登録する", class: "button" %></li>
      <li><%= link_to "スケジュール一覧に戻る", schedules_path %></li>
    </ul>
  </div>
<% end %>
